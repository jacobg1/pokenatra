<h2>Add Pokemon</h2>

<form class="add_pokemon" action="/pokemon" method="post">

  <label>Name:</label>
    <input name="pokemon[name]">

  <label>Type:</label>
  <input name="pokemon[poke_type]">

  <label>CP:</label>
  <input name="pokemon[cp]">

  <label>Photo-url:</label>
  <input name="pokemon[img_url]">

  <label>Trainer-Id:</label>
  <select name="pokemon[trainer_id]">
    <% @trainers.each do |train| %>
    <option value="<%= train.id %>"><%= train.name %></option>
    <% end %>
  </select>

  <input type="submit" value="Create">

</form>

<h3><a href="/">HOME</a></h3>
